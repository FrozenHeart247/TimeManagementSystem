@model IEnumerable<TimeManagementSystem.Models.User> 
@{
    
    ViewBag.Title = "This Is Current Page";
}
<body class="theme-purple">
    <div>
        <a class="btn bg-pink waves-effect" type="button" asp-action="Create"> Добавить Пользователя</a>
    </div>
    <div class="table">
        <table class="table">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Возраст</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
